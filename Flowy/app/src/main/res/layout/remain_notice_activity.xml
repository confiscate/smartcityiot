<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"/>

    <TextView android:text="Set remaining notice" android:layout_width="wrap_content"
        android:id="@+id/setTankRemainText"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/remainingSizeField"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="gallon"
        android:inputType="textEmailAddress" />

    <TextView android:text="gallons" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/setTankRemainNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_gravity="end"
        android:onClick="nextClick" />

</LinearLayout>
